@model Pop.ly.Models.BrowseModel
@{
    ViewBag.Title = "Index";
}
<div>
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <ul>
        @foreach (var genre in Model.genres)
        {
            <li>@genre</li>
        }</ul>
    </div>

    <div id="main">
        <span id="toggleSideNav" value="O" style="font-size:20px;cursor:pointer" onclick="toggleNav()">&#9776; Menu</span>
    </div>
    <div class="container pt-4">

        @Html.Partial("_MovieGridPartial", Model.movies)
    </div>
</div>

