@model Pop.ly.Models.CheckoutViewModel

@{
    ViewBag.Title = "Checkout";
}

<div class="container pt-4">
    <div class="OrderShippingDetails">
        <div ID="UserAddressField" class="AddressField">
            <div class="AddressFieldHeader">
                <h2>Billing Address</h2>
            </div>
            <div class="AddressFieldContent">
                <div class="form-row">
                    <div class="form-group col-6">
                        @Html.LabelFor(m => m.User.FirstName)
                        @Html.TextBoxFor(m => m.User.FirstName, new { @class = "form-control", @id = "UserFirstName", @readonly = "readonly" })
                    </div>
                    <div class="form-group col-6">
                        @Html.LabelFor(m => m.User.LastName)
                        @Html.TextBoxFor(m => m.User.LastName, new { @class = "form-control", @id = "UserLastName", @readonly = "readonly" })
                    </div>
                    <div class="form-group col-12">
                        @Html.LabelFor(m => m.User.BillingAddress)
                        @Html.TextBoxFor(m => m.User.BillingAddress, new { @class = "form-control", @id = "UserBillingAddress", @readonly = "readonly" })
                    </div>
                    <div class="form-group col-4">
                        @Html.LabelFor(m => m.User.BillingZip)
                        @Html.TextBoxFor(m => m.User.BillingZip, new { @class = "form-control", @id = "UserBillingZip", @readonly = "readonly" })
                    </div>
                    <div class="form-group col-8">
                        @Html.LabelFor(m => m.User.BillingCity)
                        @Html.TextBoxFor(m => m.User.BillingCity, new { @class = "form-control", @id = "UserBillingCity", @readonly = "readonly" })
                    </div>
                </div>             
            </div>
            <div class="AddressFieldFooter">
                <div class="form-group">
                    @Html.LabelFor(m => m.ShipToUser)
                    @Html.CheckBoxFor(m => m.ShipToUser, new { @class = "form-control", @id = "ShipToUser" })
                </div>
            </div>
        </div>
        <div ID="OrderAddressField" class="AddressField">
            <div class="AddressFieldHeader">
                <h2>Shipping Address</h2>
            </div>
            <div class="AddressFieldContent">
                <div class="form-row">
                    <div class="form-group col-6">
                        @Html.LabelFor(m => m.RecipientName)
                        @Html.TextBoxFor(m => m.RecipientName, new { @class = "form-control", @id = "RecipientName" })
                    </div>
                    <div class="form-group col-6">
                        @Html.LabelFor(m => m.RecipientSurname)
                        @Html.TextBoxFor(m => m.RecipientSurname, new { @class = "form-control", @id = "RecipientSurname" })
                    </div>
                    <div class="form-group col-12">
                        @Html.LabelFor(m => m.ShippingAddress)
                        @Html.TextBoxFor(m => m.ShippingAddress, new { @class = "form-control", @id = "ShippingAddress" })
                    </div>
                    <div class="form-group col-4">
                        @Html.LabelFor(m => m.ShippingZip)
                        @Html.TextBoxFor(m => m.ShippingZip, new { @class = "form-control", @id = "ShippingZip" })
                    </div>
                    <div class="form-group col-8">
                        @Html.LabelFor(m => m.ShippingCity)
                        @Html.TextBoxFor(m => m.ShippingCity, new { @class = "form-control", @id = "ShippingCity" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="CartContainer">
        @Html.Partial("_CartPartial", Model.Cart)
    </div>

    <a href="/ShoppingCart/PlaceOrder" id="PlaceOrder" type="button" class="btn btn-success">Checkout</a>
</div>

