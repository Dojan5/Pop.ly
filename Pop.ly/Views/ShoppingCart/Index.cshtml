@model Pop.ly.Models.ShoppingCart
@{
    ViewBag.Title = "Cart";
}
<div class="container pt-4">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Title</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                var indx = "CartRow" + @Model.Items.IndexOf(item).ToString();
                <tr id=@indx>
                    <td><img src=@item.Movie.CoverArt style="max-height: 240px;" class="img-responsive"/></td>
                    <td><a href="/Movie/?T=@item.Movie.Title&Y=@item.Movie.ReleaseYear">@item.Movie.Title</a></td>
                    <td>
                    <button onclick="DecreaseItemQuantity(@item.Movie.ID)" type="button" style="border-radius:48px;" class="btn btn-golden">-</button>
                     @item.Quantity 
                    <button onclick="IncreaseItemQuantity(@item.Movie.ID)" type="button" style="border-radius:48px;" class="btn btn-golden">+</button></td>
                    <td>COST</td>
                    <td><button id="RemoveFromCart" type="button" style="border-radius:48px;" class="btn btn-danger" onclick="RemoveFromCart(@Model.Items.IndexOf(item))"><i class="fa fa-trash" aria-hidden="true"></i></button></td>
                </tr>
         
            }
        </tbody>
    </table>
    <a href="/ShoppingCart/PlaceOrder" id="PlaceOrder" type="button" class="btn btn-success">Order WORK IN PROGRESS</a>
</div>