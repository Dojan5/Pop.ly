@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <div id="frontpage-carousel" class="carousel slide" data-ride="carousel">
        @*This code handles the indicators*@
        <ol class="carousel-indicators">
            <li data-target="#frontpage-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#frontpage-carousel" data-slide-to="1"></li>
            <li data-target="#frontpage-carousel" data-slide-to="2"></li>
        </ol>

        @*Handles the carousel items. Figure out a system to do this dynamically.*@
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Content/Images/ph1.svg" />
                <div class="carousel-caption">
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum erat sapien, accumsan ac orci et, convallis volutpat mauris. Proin non vestibulum nisi. Integer lectus lectus, auctor et interdum eu, porttitor sed tortor.</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/Images/ph2.svg" />
            </div>
            <div class="item">
                <img src="~/Content/Images/ph3.svg" />
            </div>
        </div>

        @* Adds the controls to the side of the carousel *@
        <a class="left carousel-control" href="#frontpage-carousel" role="button" data-slide="prev">
            <i class="fas fa-angle-left" aria-hidden="true"></i>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#frontpage-carousel" role="button" data-slide="next">
            <i class="fas fa-angle-right" aria-hidden="true"></i>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

