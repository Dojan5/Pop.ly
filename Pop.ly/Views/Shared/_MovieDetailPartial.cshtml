@model Pop.ly.Models.Database.Movie

<div id="promo-background" style="width: 100%; background-image: url(@Model.PromoArt); background-size: cover; background-repeat: no-repeat; background-position: center center;">
    <div id="movie-details" class="py-5">
        <div class="container">
            <div class="row">
                <div id="MovieDetailsCoverSection" class="col-sm-3">
                    <img id="DetailCover" src="@Model.CoverArt" />
                    <button data-toggle="collapse" data-target="#trailer" type="button" class="btn btn-square-top btn-secondary"><i class="fas fa-video"></i> View Trailer</button>
                </div>
                <div class="col-sm-7">
                    <div class="row">
                        <h4>@Model.Title</h4>
                    </div>
                    <div class="row pt-3">
                        @Model.Genre |&nbsp;<a href="#" class="badge badge-pill badge-secondary">@Model.ReleaseYear</a>
                    </div>
                    <div class="row pt-1">
                        @Model.Description
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="trailer" class="collapse">
    <iframe class="pt-2" width="560" height="315" src="https://www.youtube.com/embed/@Model.TrailerURL" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
</div>

