@using Pop.ly.Models.Database
@model IEnumerable<Movie>

@{ Movie[] movies = Model.ToArray();
        }
<div id="promo-carousel" class="carousel slide" data-ride="carousel">
    @*This code handles the indicators*@
    <ol class="carousel-indicators">
        <li data-target="#promo-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#promo-carousel" data-slide-to="1"></li>
        <li data-target="#promo-carousel" data-slide-to="2"></li>
    </ol>

    @*Handles the carousel items. Figure out a system to do this dynamically.*@
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img src="@movies[0].PromoArt" />
            <div class="carousel-caption">
                <p>@movies[0].Description.Substring(0, 180) ...</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="@movies[1].PromoArt" />
            <div class="carousel-caption">
                <p>@movies[1].Description.Substring(0, 180) ...</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="@movies[2].PromoArt" />
            <div class="carousel-caption">
                <p>@movies[2].Description.Substring(0, 180) ...</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#promo-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#promo-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>